<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="50dp"
    tools:context=".SpecifyAmountFragment">

    <EditText
        android:id="@+id/specify_amount_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Amount" />

    <TextView
        android:id="@+id/specify_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/specify_amount_edit_text"
        android:text="$0.00" />

    <Button
        android:id="@+id/specify_amount_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/specify_amount_edit_text"
        android:layout_marginTop="16dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:layout_below="@id/specify_amount_edit_text"
        android:layout_marginTop="16dp"
        android:id="@+id/specify_amount_cancel"
        android:layout_alignParentRight="true"/>

</RelativeLayout>